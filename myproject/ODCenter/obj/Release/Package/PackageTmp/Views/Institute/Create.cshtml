@model ODCenter.Models.InstituteInfo
@using ODCenter.Base
@using ODCenter.Models

@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "创建机构";
}

@Html.Partial("_AdminPartial", ViewData["institute"] = "active")
@using (Html.BeginForm())
{
