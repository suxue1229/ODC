@using ODCenter.Base
@model IEnumerable<SelectListItem>

@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "链接分组仪表";
}

@Html.Partial("_AdminPartial", ViewData["group"] = "active")
@using (Html.BeginForm("SensorAdd", "Group", "", FormMethod.Post, new { id = "sensor_add", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    foreach (var item in Model.OrderBy(x => x.Text))
    {
        <label class="checkbox">
            <input type="checkbox" id="@item.Value" name="@item.Value">@item.Text
        </label>
    }
    <hr style="margin-top:5px;margin-bottom:5px;" />
    <label class="checkbox">
        <input type="checkbox" id="hiddenmode" name="hiddenmode" />添加为隐藏元素
    </label>
    <hr style="margin-top:5px;margin-bottom:5px;" />
    <a class="btn btn-default" onclick="Common.selectAll(['hiddenmode'])">全选</a>
    <a class="btn btn-default" onclick="Common.selectNone(['hiddenmode'])">清除</a>
    <input type="submit" value="保存" class="btn btn-default" />
}
