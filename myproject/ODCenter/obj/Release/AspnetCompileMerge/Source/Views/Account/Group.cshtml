@using ODCenter.Base;
@using ODCenter.Controllers;
@using ODCenter.Models;
@model IEnumerable<UserGroup>
@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "用户分组";
}

@Html.Partial("_AdminPartial", ViewData["usrgroup"] = "active")
<p style="padding-top:10px;">
    <a class="btn btn-default" href="@Url.Action("Group", new { id = "" })">刷新</a>
    <a class="btn btn-default" href="@Url.Action("GroupCreate", new { id = "" })">创建用户组</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>账户列表</th>
        <th></th>
    </tr>

    @foreach (var item in Model.OrderBy(x => x.Name))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td></td>
            <td>
                <a class="btn btn-manage" href="@Url.Action("GroupDelete", new { id = item.Id })" title="删除"><span class="fa fa-trash-o"></span></a>
            </td>
        </tr>
    }
</table>
