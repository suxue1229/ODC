@using ODCenter.Base
@using ODCenter.Models;
@using Microsoft.AspNet.Identity;
@model ODCenter.Models.ManageUserInfoModel
@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "账户信息";
}

<h2>@ViewBag.Title</h2>
@Html.Partial("_AccountTabPartial")
<p class="text-success">@ViewBag.StatusMessage</p>
<p>你已使用以下身份登录: <strong>@User.Identity.GetUserName()</strong>。</p>
@if (Const.AccountEdit)
{
    using (Html.BeginForm("Info", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NickName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Company, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Department, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="更新信息" class="btn btn-default" />
            </div>
        </div>
    }
}
else
{
    <div class="table">
        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(m => m.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.LastName)
            </dd>

            <dt>
                @Html.LabelFor(m => m.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.FirstName)
            </dd>

            <dt>
                @Html.LabelFor(m => m.NickName)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.NickName)
            </dd>

            <dt>
                @Html.LabelFor(m => m.Company)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Company)
            </dd>

            <dt>
                @Html.LabelFor(m => m.Department)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Department)
            </dd>
        </dl>
    </div>
}
@section Scripts {
    <style>
        dl dt, dd {
            line-height: 30px;
        }
    </style>
    <script type="text/javascript">
        window.onload = function () {
            $("#tab_info").attr("class", "active");
        }
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}