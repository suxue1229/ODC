@model ODCenter.Models.DeviceTrack
@{
    Layout = null;
}

<div id="deletetrack" class="modal fade" role="dialog" aria-labelledby="modallabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("TrackDelete", "Device", "", FormMethod.Post, new { id = "track_delete", @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="modallabel">删除设备记录</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.HisTime)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HisTime)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DeviceId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DeviceId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color">
                        <a class="btn btn-primary" onclick="Manage.removeTrack()">删除</a>
                        <a class="btn btn-default" data-dismiss="modal" style="float:left;">关闭</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>